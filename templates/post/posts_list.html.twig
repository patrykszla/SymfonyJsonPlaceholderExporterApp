{% extends 'base.html.twig' %}

{% set current_page = current_page_from_controller %}

{% block title %}Posts list!{% endblock %}

{% block body %}
<div class="container text-center">
    <h1>Posts</h1>
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>User</th>
                <th>Title</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for post in posts %}
                <tr>
                    <th scope="row">{{ post.id }}</th>
                    <td>{{ post.user_name }}</td>
                    <td>{{ post.title }}</td>
                    <td>
                    {% if retreived_from_db == true %}
                        <a href="/post/edit/{{ post.id }}" class="btn btn-primary">Edit post</a>
                    {% endif %}
                </tr>
            {% endfor %}
        </tbody>
    </table>

    {% if retreived_from_db == false %}
        <a href="{{ path('app_posts_handle_json_add') }}" class="btn btn-primary">Save all posts</a>
    {% endif %}
    

</div>
{% endblock %}
